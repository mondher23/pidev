{% extends 'baseadmin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1> 
    <div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-12">
 {% include 'user/_filtre.html.twig' with {form : form} only %}
 </div>
    </div>
</div>
<br>
 <div class="container">

</script>

 <div class="card card-info" >
            <div class="card-header">
              <h3 class="card-title">User index</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body p-0">

    <table class="table table-bordered table-dark">
        <thead>
            <tr>
                <th>id</th>
                <th>Email</th>
                <!--<th>Roles</th> -->  
                <!--<th>Password</th>--> 
                <th>Cin</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Photo</th>
                <th>IsVerified</th>
                <th>Account approval</th>
                <th>View</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <!-- <td>{{ user.roles ? user.roles|json_encode : '' }}</td>--> 
               <!-- <td>{{ user.password }}</td>--> 
                <td>{{ user.cin }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td> <img src="{{ asset('webImage/' ~ user.photo ) }}" height="30px" width="20px" ></td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }} </td>
                <td>{% if (user.isVerified == false ) %} <a href="{{ path('user_approve', {'id': user.id}) }}">Verify the Account </a>{% endif %} </td>
                <td><a class="btn btn-primary  btn-sm" href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i></a></td>
                <td><a class="btn btn-warning  btn-sm" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
     <div class="col-md-12 text-center">
           <a class="btn btn-success  btn-lg" href="{{ path('user_new') }}"><i class="fas fa-user-plus">  </i></a>
         </div>
          <div class="col-md-12 text-center">
           <a class="btn btn-info  btn-lg" href="{{ path('user_list) }}"><i class="fas fa-print">  </i></a>
         </div>
         <br>
         <br>
        <div class="pagination justify-content-center">
           {{ knp_pagination_render(users) }}
        </div>
{% endblock %}
