<h1> La liste des voyages </h1>

              <div class="card-body">
              
                <table class="table table-bordered table-striped">
                  <thead class="table-warning" style="background-color: #4f5962;">
                  <tr>
                    <th>ID</th>
                    <th>ID user</th>
                    <th>Offre</th>
                    <th>Date de départ</th>
                    <th>Heure de départ</th>
                    <th>Destination</th>
                    <th>Effectué</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for voyage in voyages %}
                  <tr>
                    <td>{{voyage.getid()}}</td>
                    <td>{{voyage.getidU()}}</td>
                    <td>{{voyage.offre.getTitre()}}</td>
                    <td>{{voyage.getDateDep()|date('d M Y')}}</td>
                    <td>{{voyage.getHeureDep()|date('h:i')}}</td>
                    <td>{{voyage.destination}}</td>
                    <td>{{voyage.done}}</td>
                  </tr>
                  {% endfor %}
                  </tbody>
                </table>
              </div>

