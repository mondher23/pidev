{% block body %}


    
{% for personnel in personnels %}
            <!-- Profile Image -->
            <div class="card card-primary card-outline">
              <div class="card-body box-profile">
                <div class="text-center">
                  <img class="profile-user-img img-fluid img-circle"
                       src="uploads/{{personnel.photo}}"
                       alt="User profile picture">
                </div>

                <h3 class="profile-username text-center"> {{personnel.nom}} {{personnel.prenom}}</h3>

                <p class="text-muted text-center">{{personnel.fonction.getNomF()}}</p>

                <ul class="list-group list-group-unbordered mb-3">
                  <li class="list-group-item">
                    <b>id</b> <a class="float-right">{{personnel.id}}</a>
                  </li>
                  <li class="list-group-item">
                    <b>modifier personnel</b> <a class="float-right" href="{{ path('modifierPersonnel',{'id':personnel.id}) }}">update</a>
                  </li>
                  <li class="list-group-item">
                    <b>supprimer personnel</b> <a class="float-right" href="{{ path('supprimerPersonnel',{'id':personnel.id}) }}">delete</a>
                  </li>
                </ul>

              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
            {% endfor %}

{% endblock %}